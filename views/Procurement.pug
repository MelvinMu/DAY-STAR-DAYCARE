doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Procurement Page
  style.
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
    }
    .container {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    h1 {
    text-align: center;
    }
    .inventory {
    margin-top: 20px;
    }
    .inventory table {
    width: 100%;
    border-collapse: collapse;
    }
    .inventory th,
    .inventory td {
    padding: 10px;
    text-align: center;
    border-bottom: 1px solid #ddd;
    }
    .inventory th {
    background-color: #f2f2f2;
    }
    .inventory td input[type="text"] {
    width: 100%;
    padding: 5px;
    box-sizing: border-box;
    }
    .add-item {
    margin-top: 20px;
    text-align: center;
    }
    .add-item input[type="text"],
    .add-item input[type="number"] {
    padding: 10px;
    margin-right: 10px;
    box-sizing: border-box;
    }
    .add-item input[type="submit"] {
    padding: 10px 20px;
    background-color: #4caf50;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    }
    .add-item input[type="submit"]:hover {
    background-color: #45a049;
    }
.container
  h1 Procurement Page
  .inventory
    h2 Inventory
    table
      thead
        table
          thead
            tr
              th Item Sold
              th Quantity
              th Unit Price
          tbody
            tr
              td DOLLS
              td 10
              td shs.5000
            tr
              td Diapers
              td 15
              td Shs.2000
            tr
              td Fruits
              td  30
              td 3000
            tr
              td Milk
              td 50 
              td 1200
        |              Add more rows as needed
  .add-item
    h2 Add New Item
    form(action="/Procure" method="POST")
      input(type='text' name='itemName' placeholder='Item Name')
      input#quantity(type='number' name='quantity' placeholder='Quantity')
      input#unitPrice(type='number' name='unitPrice' placeholder='Unit Price')
      input(type='submit' value='Add Item')
    div
      | Total: 
      span#totalAmount 0
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
  script(src='/Js/Procurement.js')
