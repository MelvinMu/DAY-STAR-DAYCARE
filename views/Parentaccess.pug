doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Parent Access
  style.
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-image: url("images/happy-family.webp");
    }
    .container {
    max-width: 600px;
    margin: 50px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    h1 {
    text-align: center;
    margin-bottom: 30px;
    }
    .form-group {
    margin-bottom: 20px;
    }
    label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    }
    input[type="text"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    }
    input[type="submit"] {
    padding: 10px 20px;
    background-color: #4caf50;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    }
    input[type="submit"]:hover {
    background-color: #45a049;
    }
    .result {
    margin-top: 20px;
    }
    .result p {
    font-size: 16px;
    }
.container
  h1 Parent Access
  form#searchForm
    .form-group
      label(for='babyName') Search Baby:
      input#babyName(type='text' name='babyName' placeholder="Enter baby's name")
    input(type='submit' value='Search')
  #searchResult.result
    // Search results will be displayed here
script(src='/Js/Parent_acess.js')
