doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(
      content="width=device-width, initial-scale=1.0" 
      name="viewport"
      )
    title Baby Register Details
    link(
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      )
  body
    .container
      h2 Baby Register Details
      table.table.table-striped 
        thead
          tr
            th(scope="col") Baby's Name
            th(scope="col") Baby's Gender
            th(scope="col") Baby's Age
            th(scope="col") Location
            th(scope="col") Person Brought
            th(scope="col") Parent's Name 
            th(scope="col") Fee 
            th(scope="col") Period Of Stay
            th(scope="col") Baby Number
            th(scope="col") Checkin 
            th(scope="col") Delete
            th(scope="col") Update  

        tbody
         if babies.length
         each baby in babies 
          tr
            td #{baby.babyName}
            td #{baby.babyGender}
            td #{baby.babyage}
            td #{baby.location}
            td #{baby.personBrought}
            td #{baby.parentName}
            td #{baby.fee}
            td #{baby.periodOfStay}
            td #{baby.babyNumber} 
            td 
              a.btn.btn-secondary.btn-sm(href="") Check In 
            td
              a.btn.btn-danger.btn-sm(href="/delete") Delete 
            td   
              a.btn.btn-primary.btn-sm(href="/babyupdate/"+ baby._id) Update

