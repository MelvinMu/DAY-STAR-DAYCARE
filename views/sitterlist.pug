doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(
      content="width=device-width, initial-scale=1.0" 
      name="viewport"
      )
    title Baby Register Details
    link(
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      )
     

  body
    .container
      h2 Sitter Register Details
      table.table.table-striped 
        thead
          tr
            th(scope="col") First Name
            th(scope="col") Last Name
            th(scope="col") Location
            th(scope="col") Date of Birth
            th(scope="col") National Identification Number 
            th(scope="col") Next of Kin
            th(scope="col") Recommender Name
            th(scope="col") Gender
            th(scope="col") Religion
            th(scope="col") Level of Education
            th(scope="col") Sitter Number
            th(scope="col") Contact Information
             th(scope="col") Checkin
            th(scope="col") Delete
            th(scope="col") Update  

        tbody
         if sitters.length
         each sitter in sitters
          tr
            td #{sitter.firstName}
            td #{sitter.lastName}
            td #{sitter.location}
            td #{sitter.dob}
            td #{sitter.nin}
            td #{sitter.nextOfKin}
            td #{sitter.RecommenderName}
            td #{sitter.gender}
            td #{sitter.religion} 
            td #{sitter.educationLevel} 
            td #{sitter.sitterNumber} 
            td #{sitter.contact} 
             td
              a.btn.btn-danger.btn-sm(href="/Checkin") Checkin 
            td 
                    form(method="POST" action="/sitterdelete")
                      input(type="hidden" name="id" value=sitter._id)
                      button.btn.btn-danger.btn-sm(type="submit") Delete
            td   
              a.btn.btn-primary.btn-sm(href="/sitterupdate/"+ sitter._id) Update

